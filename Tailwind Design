  <script>
    const navLinks = document.querySelector('.nav-links')
    function onToggleMenu(e){
        e.name = e.name === 'menu' ? 'close' : 'menu';
        navLinks.classList.toggle('top-[10%]')
    }
 </script>
 <script>
// Get the second navbar element
const secondNavbar = document.getElementById('on_srollNavBar');
const navBar2 = document.getElementById('on_scroll_navbar');
const firstNavbar = document.getElementById('navBar');
const goButton = document.getElementById('go_button');
const goButtonText = document.getElementById('goButtonText');
const goButtonFull = document.getElementById('goButtonFull');
const pageLoader = document.getElementById('Page-loader');
const body = document.querySelector('body');

// Function to toggle the visibility and animation of the second navbar
function toggleSecondNavbar() {
  if (window.scrollY > 10) {
    secondNavbar.style.display = 'block';
    secondNavbar.classList.add('show');
    firstNavbar.style.display = 'none';
    secondNavbar.style.transition = 'ease-out all 0.5s';
  } else {
    secondNavbar.classList.remove('show');
    setTimeout(() => {
      secondNavbar.style.display = 'none';
      firstNavbar.style.display = 'block';
    }, 50); // Match the transition duration
  }
}

function moveX() {
  console.log('Yes you clicked right');
  goButton.style.transform = 'translateX(220px)';
  goButtonText.innerText = '';
  goButton.style.transition = 'ease-out all 0.5s';
  goButtonFull.style.transition = 'ease-out all 0.5s';
  goButtonFull.style.opacity = '0';
  goButton.style.opacity = '1';
  setTimeout(() => {
    location.reload();
  }, 400);
}

function secondNavbarOnMobile() {
  if (window.innerWidth < 768) {
    secondNavbar.style.display = 'none';
    firstNavbar.style.display = 'block';
  }
}

// Attach scroll event listener to the window
window.addEventListener('scroll', toggleSecondNavbar);
goButton.addEventListener('click', moveX);
window.addEventListener('scroll', secondNavbarOnMobile);
window.addEventListener('load', function () {
  document.body.style.overflow = 'hidden';
  setTimeout(() => {
    pageLoader.style.display = 'none';
    body.style.display = 'block';
    // Allow scrolling after loading
    document.body.style.overflowX = 'hidden';
    document.body.style.overflowY = 'auto';
  }, 1200);
});

</script>
</html>
